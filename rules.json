{
  "rules": {
    // TODO: try out Tom's Blaze compiler

    "currentGame": {
      ".read": true
    },

    "events": {
      ".read": true,
      ".write": "auth != null && root.child('currentGame').child('whoseTurn').val() == auth.provider",

      "$event": {
        ".validate": "newData.child('uid').val() == auth.uid && newData.child('type').val() == 'suggestion' && newData.hasChildren(['imageUrl', 'text', 'type'])"
      }
    },

    "history": {
    },

    "loggedInUsers": {
      // TODO: I'd like to set this to false but I need to have a way to determine how many total users there are without looping through each of them
      // ".read": false,
      ".read": true,
      ".write": "auth != null",

      "$provider": {
        "$uid": {
          ".validate": "auth.provider == $provider && auth.uid == $uid"
        }
      }
    },

    "suggestions": {
      ".read": true,
      ".write": "auth != null && root.child('currentGame').child('whoseTurn').val() == auth.provider",

      "$uid": {
        ".validate": "auth.uid == $uid && newData.hasChildren(['gridIndex', 'rowIndex', 'columnIndex'])"
      }
    },

    "wins": {
      ".read": true
    }
  }
}